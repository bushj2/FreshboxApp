<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshBox.Views.Setting">
    <ContentPage.Content>
        <ScrollView >
            <StackLayout Padding="10">
                <Button x:Name="accountInfo" Text="Account Info" TextColor="#8f663d" FontSize="Title" HorizontalOptions="Fill" CornerRadius="10" Margin="5" Clicked="AccountInfoNav" />
                <Button x:Name="preferneces" Text="Preferences" TextColor="#8f663d" FontSize="Title" HorizontalOptions="Fill" CornerRadius="10" Margin="5" Clicked="PreferencesNav"/>
                <Button x:Name="appDetails" Text="App Details" TextColor="#8f663d" FontSize="Title" HorizontalOptions="Fill" CornerRadius="10" Margin="5" Clicked="AppDetailsNav"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
